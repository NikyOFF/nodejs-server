{
  "compilerOptions": {
    "rootDir": "src",

    "target": "ESNext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,

    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    },

    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],

    "strict": false,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "pretty": true,

    "noEmit": false,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
  }
}